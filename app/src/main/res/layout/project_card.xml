<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/idCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="7dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:id="@+id/cardBackground"
            android:background="@color/cardview_light_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_margin="10dp"
                android:gravity="left"
                android:weightSum="14"
                android:orientation="vertical">

                <!-- Rest of the product info and add/remove to/from cart symbols -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">
                        <TextView
                            android:id="@+id/idProjectName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="@string/debt_costs"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5">
                        <TextView
                            android:id="@+id/idProjectPrice"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="20dp"
                            android:text="@string/test" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:id="@+id/doneButton"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_close_black_24dp"
                            android:layout_height="match_parent">

                        </ImageButton>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:id="@+id/viewButton"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_remove_red_eye_black_24dp"
                            android:layout_height="match_parent">

                        </ImageButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:id="@+id/editButton"
                            android:src="@drawable/ic_edit_black_24dp"
                            android:background="@android:color/transparent"
                            android:layout_height="match_parent">

                        </ImageButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <ImageButton
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_delete"
                            android:id="@+id/deleteButton"
                            android:background="@android:color/transparent"
                            android:layout_height="match_parent">

                        </ImageButton>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                    </Space>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
             android:gravity="right"
                android:layout_weight="6">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/gradientLayout"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/idPersonImage"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>