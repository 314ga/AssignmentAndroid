<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/idCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="7dp"
        android:layout_margin="7dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:id="@+id/cardBackground"
            android:background="@color/darkBlue"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="0dp"
                android:id="@+id/idTaskChosen"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@color/white"
                android:layout_margin="@dimen/card_margin"
                android:gravity="center"
                android:orientation="vertical">
            </CheckBox>
            <LinearLayout
                android:id="@+id/layoutDisable"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:weightSum="9"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:weightSum="4"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/taskNameTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_height="0dp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_height="0dp">
                        <ImageView
                            android:id="@+id/firstTaskImage"
                            android:layout_width="0dp"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_crop_original_black_24dp"
                            android:layout_height="match_parent">
                        </ImageView>
                        <ImageView
                            android:id="@+id/secondTaskImage"
                            android:layout_width="0dp"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_crop_original_black_24dp"
                            android:layout_height="match_parent">
                        </ImageView>
                        <ImageView
                            android:id="@+id/thirdTaskImage"
                            android:layout_width="0dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_crop_original_black_24dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                        </ImageView>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/layoutHeight"
                    android:gravity="center"
                    android:layout_weight="3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/eGradientLayout"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:id="@+id/addImageToTask"
                            android:layout_width="wrap_content"
                            android:background="@null"
                            android:src="@drawable/ic_add_a_photo_big"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>