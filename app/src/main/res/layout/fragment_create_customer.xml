<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent">

    <!--margins-->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_margin"
        app:layout_constraintGuide_percent=".04"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_margin"
        app:layout_constraintGuide_percent=".95"
        android:orientation="vertical"/>
    <!--top-->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_margin"
        app:layout_constraintGuide_percent=".03"
        android:orientation="horizontal"/>
    <!--bottom-->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_margin"
        app:layout_constraintGuide_percent=".97"
        android:orientation="horizontal"/>

    <EditText
        android:id="@+id/firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textColorHint="@color/hintText"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/third_guide"
        app:layout_constraintEnd_toStartOf="@+id/right_margin"
        app:layout_constraintStart_toStartOf="@+id/left_margin"
        app:layout_constraintTop_toTopOf="@+id/top_margin">

    </EditText>

    <EditText
        android:id="@+id/lastName"
        android:layout_width="0dp"
        android:hint="Last Name"
        android:textColorHint="@color/hintText"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/right_margin"
        app:layout_constraintStart_toStartOf="@+id/left_margin"
        app:layout_constraintTop_toBottomOf="@+id/firstName">

    </EditText>
    <EditText
        android:id="@+id/emailCreateCustomer"
        android:layout_width="0dp"
        android:hint="Email"
        android:textColorHint="@color/hintText"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/right_margin"
        app:layout_constraintStart_toStartOf="@+id/left_margin"
        app:layout_constraintTop_toBottomOf="@+id/lastName">

    </EditText>
    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="0dp"
        android:textColorHint="@color/hintText"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/third_guide"
        app:layout_constraintEnd_toStartOf="@+id/right_margin"
        app:layout_constraintStart_toStartOf="@+id/left_margin"
        app:layout_constraintTop_toBottomOf ="@+id/emailCreateCustomer">

    </EditText>

    <Switch
        android:id="@+id/saveOnlineCustomer"
        android:layout_width="wrap_content"
        android:text="@string/save_online"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/right_margin"
        app:layout_constraintStart_toStartOf="@+id/left_margin"
        app:layout_constraintTop_toBottomOf="@+id/createCustomer">

    </Switch>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/createCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_customer"
        app:rippleColor="@color/viewBg"
        app:strokeColor="@color/white"
        android:textColor="@color/white"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toStartOf="@+id/right_margin"
        app:layout_constraintStart_toStartOf="@+id/left_margin"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        />


</androidx.constraintlayout.widget.ConstraintLayout>